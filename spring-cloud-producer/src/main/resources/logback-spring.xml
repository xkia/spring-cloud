        <!--<springProfile name="!dev">-->
            <!--<appender-ref ref="ASYNC" />-->
            <!--<appender-ref ref="ASYNC_ERROR"/>-->
        <!--</springProfile>-->
    <!--</logger>-->

    <root level="DEBUG">
            <appender-ref ref="STDOUT" />
        <springProfile name="!dev">
            <appender-ref ref="ASYNC" />
            <appender-ref ref="ASYNC_ERROR"/>
        </springProfile>
    </root>
</configuration>